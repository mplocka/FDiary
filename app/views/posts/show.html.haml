#post_content
	%h1= @post.title
	%p= @post.content

	%p
		= @post.get_upvotes.size
		Likes
	%p
		= @post.get_downvotes.size
		Dislikes

	= link_to "Like", like_post_path(@post), method: :get
	= link_to "Dislike", dislike_post_path(@post), method: :get

	#comments
		%h2
			= @post.comments.count
			Comments
		= render @post.comments

		%h2 Reply to thread
		= render "comments/form"

	
	-if current_user == @post.user || current_user.admin?
		= link_to "Edit", edit_post_path(@post), class: "button"
		= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to do this?" }, class: "button"
		= link_to "Home", root_path, class: "button"
	-else 
		= link_to "Home", root_path, class: "button"
	